{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read",
      "Bash(cat *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(gemini *)",
      "Bash(gh issue create *)",
      "Bash(gh pr create *)",
      "Bash(gh pr checks*)",
      "Bash(gh pr diff*)",
      "Bash(gh pr list*)",
      "Bash(gh pr view*)",
      "Bash(gh run list *)",
      "Bash(gh repo view *)",
      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git pull *)",
      "Bash(git status *)",
      "Bash(read *)",
      "Bash(grep *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(tail *)",
      "Bash(jq *)",
      "mcp__playwright__*"
    ],
    "deny": []
  },
  "plansDirectory": ".claude/plans",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "ignoreViolations": {
      "git": [".git/config"]
    },
    "network": {
      "allowedDomains": [
        "github.com",
        "api.github.com",
        "json.schemastore.org",
        "www.schemastore.org"
      ]
    }
  }
}
