{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(CURRENT_BRANCH=$(git branch --show-current):*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(gemini:*)",
      "Bash(gh api:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git log:*)",
      "Bash(git ls-remote:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git diff:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git fetch:*)",
      "Bash(git show-ref:*)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rm:*)",
      "Bash(nl:*)",
      "Bash(wc:*)",
      "Bash(dirname:*)",
      "Bash(basename:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(npm run:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(read:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(xargs grep:*)",
      "Bash(osascript:*)",
      "Bash(date:*)",
      "Bash(.claude/hooks/task-completion-notify.sh)",
      "Read(~/.claude/commands/*.md)",
      "Fetch(https://docs.anthropic.com/*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-completion-notify.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-completion-notify.sh"
          }
        ]
      }
    ]
  }
}